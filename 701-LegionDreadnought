i=0
loop
  addTurret(i,43+i*2,7+i*14,23+i*0.4,0.3,-40)
  addTurret(i+4,54-i*2,64.5+i*14,24-i*1.2,0.3,-90)
  i = i+1
  if i == 5 then break

i=0
loop
  addSidegun(i,65+i*2,10+i*13,8,0.4,-90,4,[8,8])
  addSidegun(i+4,75-i*1.2,66.5+i*13,7,0.4,-90,3,[8,8])
  i = i+1
  if i == 5 then break

addSidegun(15,28,-76,0,0.6,0,4,[60,60])
addSidegun(16,17,-102,0,0.6,0,4,[60,60])


return model;
